                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource LabelTextBrush}"
                                               Text="Bulk Process"
                                               TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                        <StackPanel>
                            <CheckBox Margin="0,0,5,5"
                                      Style="{StaticResource CustomCheckBox}">
                                <TextBlock Text="Inheritable"
                                           TextTrimming="CharacterEllipsis" />
                            </CheckBox>
                            <CheckBox x:Name="bulkInheritedCheckBox"
                                      Margin="0,0,5,5"
                                      Style="{StaticResource CustomCheckBox}">
                                <TextBlock Text="Inherited"
                                           TextTrimming="CharacterEllipsis" />
                            </CheckBox>
                            <ComboBox Margin="0,0,5,5"
                                      Controls:TextBoxHelper.UseFloatingWatermark="True"
                                      Controls:TextBoxHelper.Watermark="Inherited From"
                                      Visibility="{Binding ElementName=bulkInheritedCheckBox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <ComboBox Margin="0,0,5,5"
                                      Controls:TextBoxHelper.UseFloatingWatermark="True"
                                      Controls:TextBoxHelper.Watermark="Implementation Status" />
                            <DatePicker Margin="0,0,5,5"
                                        Controls:TextBoxHelper.Watermark="Implementation Date" />
                            <TextBox Width="200"
                                     Margin="0,0,5,5"
                                     Controls:TextBoxHelper.UseFloatingWatermark="True"
                                     Controls:TextBoxHelper.Watermark="Implementation Notes"
                                     AcceptsReturn="True" />
                        </StackPanel>
                    </Expander>
                </Grid>
            </TabItem>
            <TabItem Header="Implement"
                     Style="{StaticResource CustomVerticalMetroTabItem}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <DataGrid Margin="5,0"
                              Style="{StaticResource GreyBorderedDataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn />
                            <DataGridTextColumn Width="*">
                                <DataGridTextColumn.Header>
                                    <Label>
                                        <TextBlock Text="Asset Name"
                                                   TextTrimming="CharacterEllipsis" />
                                    </Label>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="*">
                                <DataGridTextColumn.Header>
                                    <Label>
                                        <TextBlock Text="Applicable Testing"
                                                   TextTrimming="CharacterEllipsis" />
                                    </Label>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                            <DataGridCheckBoxColumn Width="Auto">
                                <DataGridCheckBoxColumn.Header>
                                    <Label>
                                        <TextBlock Text="Completed"
                                                   TextTrimming="CharacterEllipsis" />
                                    </Label>
                                </DataGridCheckBoxColumn.Header>
                            </DataGridCheckBoxColumn>
                            <DataGridTextColumn Width="*">
                                <DataGridTextColumn.Header>
                                    <Label>
                                        <TextBlock Text="Completion Date"
                                                   TextTrimming="CharacterEllipsis" />
                                    </Label>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Expander Grid.Column="1"
                              Background="{DynamicResource WindowBackgroundBrush}"
                              BorderThickness="0"
                              ExpandDirection="Right">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource LabelTextBrush}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconMaterial Grid.Column="0"
                                                                Margin="5"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Kind="CheckAll">
                                        <IconPacks:PackIconMaterial.LayoutTransform>
                                            <RotateTransform Angle="-90" />
                                        </IconPacks:PackIconMaterial.LayoutTransform>
                                    </IconPacks:PackIconMaterial>
                                    <TextBlock Grid.Column="1"
                                               Margin="5,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource LabelTextBrush}"
                                               Text="Bulk Process"
                                               TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                        <StackPanel>
                            <CheckBox Margin="0,0,5,5"
                                      Style="{StaticResource CustomCheckBox}">
                                <TextBlock Text="Completed" />
                            </CheckBox>
                            <DatePicker Margin="0,0,5,5"
                                        Controls:TextBoxHelper.UseFloatingWatermark="True"
                                        Controls:TextBoxHelper.Watermark="Completion Date" />
                        </StackPanel>
                    </Expander>
                </Grid>
            </TabItem>
            <TabItem Header="Assess"
                     Style="{StaticResource CustomVerticalMetroTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="Background"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                            </Expander.Header>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           Margin="0,0,0,5"
                                           TextWrapping="Wrap">
                                    Discuss the background of the system and its purpose.
                                    Describe the need that the system is intended to meet and idntify any expected interfaces with other systems.
                                    Enter a high-level summary paragraph describing the design and how it integrates with any existing systems,
                                    addressing inheritance and specific defense-in-depth controls.
                                </TextBlock>
                                <TextBox Grid.Row="1"
                                         Height="100"
                                         Controls:TextBoxHelper.UseFloatingWatermark="True"
                                         Controls:TextBoxHelper.Watermark="Background"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap" />
                            </Grid>
                        </Expander>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="Scope"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                            </Expander.Header>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           Margin="0,0,0,5"
                                           TextWrapping="Wrap">
                                    Describe which system components (in broad terms) will be tested and
                                    certified during execution of the security test plan; a full list of
                                    components will appear later in the &quot;Testing Architecture&quot; section.
                                    Include deviations or exceptions related to representative sampling,
                                    technical problems with automated testing of devices, etc. (details
                                    will be discussed below).  Reference any external testing completed
                                    or required, such as Cyber Security Inspection (CSI) or Web Risk
                                    Assessment (WRA) results, if applicable.
                                </TextBlock>
                                <TextBox Grid.Row="1"
                                         Height="100"
                                         Controls:TextBoxHelper.UseFloatingWatermark="True"
                                         Controls:TextBoxHelper.Watermark="Background"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap" />
                            </Grid>
                        </Expander>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="References"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                            </Expander.Header>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           Margin="0,0,0,5"
                                           TextWrapping="Wrap">
                                    List any reference documents that were used to support testing and prepare
                                    this plan.
                                </TextBlock>
                                <DataGrid Grid.Row="1"
                                          Height="100"
                                          Style="{StaticResource GreyBorderedDataGridStyle}">
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn />
                                        <DataGridTextColumn Width="*">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="Reference"
                                                           TextTrimming="CharacterEllipsis" />
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Authorize"
                     Style="{StaticResource CustomVerticalMetroTabItem}" />
            <TabItem Header="Monitor"
                     Style="{StaticResource CustomVerticalMetroTabItem}" />
        </Controls:MetroAnimatedSingleRowTabControl>
    </Grid>
</UserControl>
