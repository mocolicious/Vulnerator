<UserControl x:Class="Vulnerator.View.UI.RmfView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:Converters="clr-namespace:Vulnerator.View.Converter"
             xmlns:IconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:LiveCharts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:Vulnerator.View.UI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:v="clr-namespace:Vulnerator.View"
             xmlns:vh="clr-namespace:Vulnerator.View.ViewHelper"
             xmlns:vm="clr-namespace:Vulnerator.ViewModel"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignWidth="800"
             DataContext="{Binding Rmf, Source={StaticResource Locator}}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="{DynamicResource WindowBackgroundBrush}">
        <Controls:MetroAnimatedSingleRowTabControl Margin="5,0,5,5"
                                                   Controls:TabControlHelper.Underlined="SelectedTabItem"
                                                   TabStripPlacement="Left">
            <TabItem Style="{StaticResource CustomVerticalMetroTabItem}">
                <TabItem.Header>
                    <ComboBox Controls:TextBoxHelper.Watermark="Select an Accreditation"
                              IsEnabled="True" />
                </TabItem.Header>
                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="System Overview"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                            </Expander.Header>
                            <StackPanel>
                                <TextBox Grid.Column="0"
                                         Grid.ColumnSpan="2"
                                         Margin="0,0,0,5"
                                         Controls:TextBoxHelper.Watermark="System Name"
                                         Style="{StaticResource HeaderedTextBoxStyle}" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Margin="0,0,5,5"
                                             Controls:TextBoxHelper.Watermark="System Acronym"
                                             Style="{StaticResource HeaderedTextBoxStyle}" />
                                    <TextBox Grid.Column="1"
                                             Margin="0,0,5,5"
                                             Controls:TextBoxHelper.Watermark="System Version/Release"
                                             Style="{StaticResource HeaderedTextBoxStyle}" />
                                    <TextBox Grid.Column="2"
                                             Margin="0,0,0,5"
                                             Controls:TextBoxHelper.Watermark="System eMASS ID"
                                             Style="{StaticResource HeaderedTextBoxStyle}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Margin="0,0,5,5"
                                              Controls:TextBoxHelper.Watermark="System Registration Type"
                                              IsEditable="True"
                                              Style="{StaticResource HeaderedComboBoxStyle}" />
                                    <ComboBox Grid.Column="1"
                                              Margin="0,0,0,5"
                                              Controls:TextBoxHelper.Watermark="System Type"
                                              IsEditable="True"
                                              Style="{StaticResource HeaderedComboBoxStyle}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0"
                                              Margin="0,0,5,5"
                                              Controls:TextBoxHelper.Watermark="DITPR ID"
                                              IsEditable="True"
                                              Style="{StaticResource HeaderedComboBoxStyle}" />
                                    <ComboBox Grid.Column="1"
                                              Margin="0,0,0,5"
                                              Controls:TextBoxHelper.Watermark="DoD IT Registration Number"
                                              IsEditable="True"
                                              Style="{StaticResource HeaderedComboBoxStyle}" />
                                </Grid>
                                <TextBox Margin="0,0,0,5"
                                         Controls:TextBoxHelper.Watermark="DVS Site"
                                         Style="{StaticResource HeaderedTextBoxStyle}" />
                            </StackPanel>
                        </Expander>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="Accessibility"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                            </Expander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <ComboBox Margin="0,0,5,5"
                                          Controls:TextBoxHelper.Watermark="Logical Access Control"
                                          IsEditable="True"
                                          Style="{StaticResource HeaderedComboBoxStyle}" />
                                <ComboBox Grid.Column="1"
                                          Margin="0,0,0,5"
                                          Controls:TextBoxHelper.Watermark="Physical Access Control"
                                          IsEditable="True"
                                          Style="{StaticResource HeaderedComboBoxStyle}" />
                                <ComboBox Grid.Row="1"
                                          Grid.Column="0"
                                          Margin="0,0,5,5"
                                          Controls:TextBoxHelper.Watermark="Network Connection Antivirus Scan Periodicity"
                                          IsEditable="True"
                                          Style="{StaticResource HeaderedComboBoxStyle}" />
                                <ComboBox Grid.Row="1"
                                          Grid.Column="1"
                                          Margin="0,0,0,5"
                                          Controls:TextBoxHelper.Watermark="DoDIN Connection Periodicity"
                                          IsEditable="True"
                                          Style="{StaticResource HeaderedComboBoxStyle}" />
                            </Grid>
                        </Expander>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="Ports / Architecture Information"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                            </Expander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBox Margin="0,0,5,5"
                                         Controls:TextBoxHelper.Watermark="PPSM Registration Number"
                                         Style="{StaticResource HeaderedTextBoxStyle}" />
                                <DatePicker Grid.Column="1"
                                            Margin="0,0,0,5"
                                            Controls:TextBoxHelper.Watermark="PPSM Registration Date"
                                            Style="{StaticResource HeaderedDatePickerStyle}" />
                            </Grid>
                        </Expander>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="Encryption"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                            </Expander.Header>
                            <DataGrid MinHeight="100"
                                      Margin="0,0,0,5"
                                      Style="{StaticResource GreyBorderedDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn />
                                    <DataGridTextColumn Width="*">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Encryption Technique"
                                                       TextTrimming="CharacterEllipsis" />
                                        </DataGridTextColumn.Header>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Width="*">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Cryptographic Key Management"
                                                       TextTrimming="CharacterEllipsis" />
                                        </DataGridTextColumn.Header>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Expander>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="Location Information"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                            </Expander.Header>
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox x:Name="typeAccreditationCheckBox"
                                              Margin="0,5,5,6"
                                              VerticalAlignment="Bottom"
                                              Style="{StaticResource CustomCheckBox}">
                                        <TextBlock Text="Type Authorization"
                                                   TextTrimming="CharacterEllipsis" />
                                    </CheckBox>
                                    <TextBox Grid.Column="1"
                                             Grid.ColumnSpan="2"
                                             Margin="0,0,0,5"
                                             Controls:TextBoxHelper.Watermark="Type Authorization Installation Name / Owning Organization"
                                             IsEnabled="{Binding ElementName=typeAccreditationCheckBox, Path=IsChecked}"
                                             Style="{StaticResource HeaderedTextBoxStyle}" />
                                </Grid>
                                <DataGrid MinHeight="100"
                                          Margin="0,0,0,5"
                                          Style="{StaticResource GreyBorderedDataGridStyle}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Width="*">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="Associated Locations"
                                                           TextTrimming="CharacterEllipsis" />
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                    <DataGrid.RowDetailsTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <TextBlock HorizontalAlignment="Stretch"
                                                           FontWeight="DemiBold"
                                                           Text="Street Address One:"
                                                           TextAlignment="Right"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Grid.Row="1"
                                                           HorizontalAlignment="Stretch"
                                                           FontWeight="DemiBold"
                                                           Text="Street Address One:"
                                                           TextAlignment="Right"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Grid.Row="2"
                                                           HorizontalAlignment="Stretch"
                                                           FontWeight="DemiBold"
                                                           Text="Building:"
                                                           TextAlignment="Right"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Grid.Row="2"
                                                           Grid.Column="2"
                                                           HorizontalAlignment="Stretch"
                                                           FontWeight="DemiBold"
                                                           Text="Floor:"
                                                           TextAlignment="Right"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Grid.Row="2"
                                                           Grid.Column="4"
                                                           HorizontalAlignment="Stretch"
                                                           FontWeight="DemiBold"
                                                           Text="Room:"
                                                           TextAlignment="Right"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Grid.Row="3"
                                                           HorizontalAlignment="Stretch"
                                                           FontWeight="DemiBold"
                                                           Text="City:"
                                                           TextAlignment="Right"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Grid.Row="3"
                                                           Grid.Column="2"
                                                           HorizontalAlignment="Stretch"
                                                           FontWeight="DemiBold"
                                                           Text="State:"
                                                           TextAlignment="Right"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Grid.Row="3"
                                                           Grid.Column="4"
                                                           HorizontalAlignment="Stretch"
                                                           FontWeight="DemiBold"
                                                           Text="Zip Code:"
                                                           TextAlignment="Right"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Grid.Row="4"
                                                           HorizontalAlignment="Stretch"
                                                           FontWeight="DemiBold"
                                                           Text="APO / FPO:"
                                                           TextAlignment="Right"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Grid.Row="5"
                                                           HorizontalAlignment="Stretch"
                                                           FontWeight="DemiBold"
                                                           Text="OSS Accreditation Date:"
                                                           TextAlignment="Right"
                                                           TextTrimming="CharacterEllipsis" />
                                                <CheckBox Grid.Row="6"
                                                          Grid.ColumnSpan="2"
                                                          Style="{StaticResource CustomCheckBox}">
                                                    <TextBlock Text="Is Baseline Location"
                                                               TextTrimming="CharacterEllipsis" />
                                                </CheckBox>
                                                <CheckBox Grid.Row="6"
                                                          Grid.Column="2"
                                                          Grid.ColumnSpan="2"
                                                          Style="{StaticResource CustomCheckBox}">
                                                    <TextBlock Text="Is Deployment Location"
                                                               TextTrimming="CharacterEllipsis" />
                                                </CheckBox>
                                                <CheckBox Grid.Row="6"
                                                          Grid.Column="4"
                                                          Grid.ColumnSpan="2"
                                                          Style="{StaticResource CustomCheckBox}">
                                                    <TextBlock Text="Is Test Location"
                                                               TextTrimming="CharacterEllipsis" />
                                                </CheckBox>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGrid.RowDetailsTemplate>
                                </DataGrid>
                            </StackPanel>
                        </Expander>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="Authorization Information"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                            </Expander.Header>
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <ComboBox Margin="0,0,5,5"
                                              Controls:TextBoxHelper.Watermark="Security Plan Approval Status"
                                              Style="{StaticResource HeaderedComboBoxStyle}" />
                                    <DatePicker Grid.Column="1"
                                                Margin="0,0,0,5"
                                                Controls:TextBoxHelper.Watermark="Security Plan Approval Date"
                                                Style="{StaticResource HeaderedDatePickerStyle}" />
                                    <ComboBox Grid.Row="1"
                                              Margin="0,0,5,5"
                                              Controls:TextBoxHelper.Watermark="Authorization Status"
                                              Style="{StaticResource HeaderedComboBoxStyle}" />
                                    <DatePicker Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="0,0,0,5"
                                                Controls:TextBoxHelper.Watermark="Authorization Date"
                                                Style="{StaticResource HeaderedDatePickerStyle}" />
                                    <CheckBox Grid.Row="2"
                                              Margin="0,5,5,6"
                                              VerticalAlignment="Bottom"
                                              Style="{StaticResource CustomCheckBox}">
                                        <TextBlock Text="Has Authorization Documentation"
                                                   TextTrimming="CharacterEllipsis" />
                                    </CheckBox>
                                    <DatePicker Grid.Row="2"
                                                Grid.Column="1"
                                                Margin="0,0,0,5"
                                                Controls:TextBoxHelper.Watermark="Authorization Termination Date"
                                                Style="{StaticResource HeaderedDatePickerStyle}" />
                                    <ComboBox Grid.Row="3"
                                              Margin="0,0,5,5"
                                              Controls:TextBoxHelper.Watermark="RMF Activity"
                                              Style="{StaticResource HeaderedComboBoxStyle}" />
                                    <DatePicker Grid.Row="3"
                                                Grid.Column="1"
                                                Margin="0,0,0,5"
                                                Controls:TextBoxHelper.Watermark="Assessment Completion Date"
                                                Style="{StaticResource HeaderedDatePickerStyle}" />
                                </Grid>
                                <DataGrid MinHeight="100"
                                          Margin="0,0,0,5"
                                          Style="{StaticResource GreyBorderedDataGridStyle}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Width="*">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="Authorization Condition"
                                                           TextTrimming="CharacterEllipsis" />
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Width="*">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="Required Completion Date"
                                                           TextTrimming="CharacterEllipsis" />
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>
                                        <DataGridCheckBoxColumn Width="Auto">
                                            <DataGridCheckBoxColumn.Header>
                                                <TextBlock Text="Completed"
                                                           TextTrimming="CharacterEllipsis" />
                                            </DataGridCheckBoxColumn.Header>
                                        </DataGridCheckBoxColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Expander>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="FISMA"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                            </Expander.Header>
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <CheckBox Grid.Row="0"
                                              Margin="0,5,5,6"
                                              Style="{StaticResource CustomCheckBox}">
                                        <TextBlock Text="FISMA Reportable"
                                                   TextTrimming="CharacterEllipsis" />
                                    </CheckBox>
                                    <CheckBox Grid.Row="0"
                                              Grid.Column="1"
                                              Margin="0,5,0,6"
                                              Style="{StaticResource CustomCheckBox}">
                                        <TextBlock Text="ERS Reportable"
                                                   TextTrimming="CharacterEllipsis" />
                                    </CheckBox>
                                    <CheckBox Grid.Row="1"
                                              Margin="0,5,5,6"
                                              VerticalAlignment="Bottom"
                                              Style="{StaticResource CustomCheckBox}">
                                        <TextBlock Text="Security Review Completed"
                                                   TextTrimming="CharacterEllipsis" />
                                    </CheckBox>
                                    <DatePicker Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="0,0,0,5"
                                                Controls:TextBoxHelper.Watermark="Security Review Date"
                                                Style="{StaticResource HeaderedDatePickerStyle}" />
                                    <CheckBox Grid.Row="2"
                                              Margin="0,5,5,6"
                                              VerticalAlignment="Bottom"
                                              Style="{StaticResource CustomCheckBox}">
                                        <TextBlock Text="Privacy Impact Assessment (PIA) Required"
                                                   TextTrimming="CharacterEllipsis" />
                                    </CheckBox>
                                    <DatePicker Grid.Row="2"
                                                Grid.Column="1"
                                                Margin="0,0,0,5"
                                                Controls:TextBoxHelper.Watermark="PIA Completion Date"
                                                Style="{StaticResource HeaderedDatePickerStyle}" />
                                    <CheckBox Grid.Row="3"
                                              Margin="0,5,5,6"
                                              VerticalAlignment="Bottom"
                                              Style="{StaticResource CustomCheckBox}">
                                        <TextBlock Text="eAuthentication Risk Assessent (ERA) Required"
                                                   TextTrimming="CharacterEllipsis" />
                                    </CheckBox>
                                    <DatePicker Grid.Row="3"
                                                Grid.Column="1"
                                                Margin="0,0,0,5"
                                                Controls:TextBoxHelper.Watermark="ERA Completion Date"
                                                Style="{StaticResource HeaderedDatePickerStyle}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.ColumnSpan="2"
                                              Margin="0,15,5,6"
                                              Style="{StaticResource CustomCheckBox}">
                                        <TextBlock Text="Contingency Plan Required"
                                                   TextTrimming="CharacterEllipsis" />
                                    </CheckBox>
                                    <CheckBox x:Name="contingencyPlanTestedCheckBox"
                                              Grid.Column="2"
                                              Margin="0,15,5,6"
                                              Style="{StaticResource CustomCheckBox}">
                                        <TextBlock Text="Contingency Plan Tested"
                                                   TextTrimming="CharacterEllipsis" />
                                    </CheckBox>
                                    <DatePicker Grid.Column="3"
                                                Margin="0,0,0,5"
                                                Controls:TextBoxHelper.UseFloatingWatermark="True"
                                                Controls:TextBoxHelper.Watermark="Contingency Plan Test Date"
                                                Visibility="{Binding ElementName=contingencyPlanTestedCheckBox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </Grid>
                            </StackPanel>
                        </Expander>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="Business Information"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                            </Expander.Header>
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <ComboBox Margin="0,0,5,5"
                                              Controls:TextBoxHelper.Watermark="Mission Criticality"
                                              Style="{StaticResource HeaderedComboBoxStyle}" />
                                    <ComboBox Grid.Column="1"
                                              Margin="0,0,0,5"
                                              Controls:TextBoxHelper.Watermark="Governing Mission Area"
                                              Style="{StaticResource HeaderedComboBoxStyle}" />
                                    <TextBox Grid.Row="1"
                                             Grid.ColumnSpan="2"
                                             Margin="0,0,0,5"
                                             Controls:TextBoxHelper.Watermark="Owning DoD Component"
                                             Style="{StaticResource HeaderedTextBoxStyle}" />
                                    <ComboBox Grid.Row="2"
                                              Margin="0,0,5,5"
                                              Controls:TextBoxHelper.Watermark="Acquisition Category"
                                              Style="{StaticResource HeaderedComboBoxStyle}" />
                                    <ComboBox Grid.Row="2"
                                              Grid.Column="1"
                                              Margin="0,0,0,5"
                                              Controls:TextBoxHelper.Watermark="Software Category"
                                              Style="{StaticResource HeaderedComboBoxStyle}" />
                                </Grid>
                                <ComboBox Margin="0,0,0,5"
                                          Controls:TextBoxHelper.Watermark="System Lifecycle / Acquisition Phase"
                                          Style="{StaticResource HeaderedComboBoxStyle}" />
                                <ComboBox Margin="0,0,0,5"
                                          Controls:TextBoxHelper.Watermark="System Ownership &amp; Control"
                                          Style="{StaticResource HeaderedComboBoxStyle}" />
                                <TextBox Height="100"
                                         Margin="0,0,0,5"
                                         Controls:TextBoxHelper.Watermark="Additional Information"
                                         AcceptsReturn="True"
                                         Style="{StaticResource HeaderedTextBoxStyle}" />
                            </StackPanel>
                        </Expander>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="External Security Services"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                            </Expander.Header>
                            <DataGrid MinHeight="100"
                                      Margin="0,0,0,5"
                                      Style="{StaticResource GreyBorderedDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn />
                                    <DataGridTextColumn Width="*">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="External Security Service"
                                                       TextTrimming="CharacterEllipsis" />
                                        </DataGridTextColumn.Header>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                                <DataGrid.RowDetailsTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBox Margin="0,0,0,5"
                                                     AcceptsReturn="True"
                                                     Text="Service Description"
                                                     TextWrapping="Wrap" />
                                            <TextBox Grid.Row="1"
                                                     Margin="0,0,0,5"
                                                     AcceptsReturn="True"
                                                     Text="Security Requirements Description"
                                                     TextWrapping="Wrap" />
                                            <TextBox Grid.Row="2"
                                                     Margin="0,0,0,5"
                                                     AcceptsReturn="True"
                                                     Text="Risk Determination"
                                                     TextWrapping="Wrap" />
                                        </Grid>
                                    </DataTemplate>
                                </DataGrid.RowDetailsTemplate>
                            </DataGrid>
                        </Expander>
                        <Expander Margin="5,0,5,5"
                                  Background="{DynamicResource WindowBackgroundBrush}"
                                  BorderThickness="0"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Label Style="{StaticResource TopLevelHeaderStyle}">
                                    <TextBlock Text="Connectivity"
