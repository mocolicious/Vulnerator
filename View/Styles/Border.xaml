<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:GridExtra="clr-namespace:SourceChord.GridExtra;assembly=GridExtra.Wpf">

    <Style x:Key="ResponsiveGridThemeBorderStyle"
           TargetType="{x:Type Border}">
        <Setter Property="GridExtra:ResponsiveGrid.SM" Value="2" />
        <Setter Property="GridExtra:ResponsiveGrid.XS" Value="3" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style x:Key="ResponsiveGridReportingBorderStyle"
           TargetType="{x:Type Border}">
        <Setter Property="GridExtra:ResponsiveGrid.LG" Value="4" />
        <Setter Property="GridExtra:ResponsiveGrid.MD" Value="6" />
        <Setter Property="GridExtra:ResponsiveGrid.XS" Value="12" />
        <Setter Property="Margin" Value="5,0" />
    </Style>

</ResourceDictionary>