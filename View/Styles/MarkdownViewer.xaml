<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                    xmlns:Converters="clr-namespace:Vulnerator.View.Converter"
                    xmlns:IconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:local="clr-namespace:Vulnerator.View.Styles"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:vh="clr-namespace:Vulnerator.View.ViewHelper"
                    xmlns:vm="clr-namespace:Vulnerator.ViewModel"
                    xmlns:wpf="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf">

    <Style x:Key="{x:Static wpf:Styles.CodeBlockStyleKey}"
           TargetType="{x:Type Paragraph}">
        <Setter Property="FontFamily" Value="Consolas, Lucida Sans Typewriter, Courier New" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="{x:Static wpf:Styles.CodeStyleKey}"
           TargetType="{x:Type Run}">
        <Setter Property="FontFamily" Value="Consolas, Lucida Sans Typewriter, Courier New" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="{x:Static wpf:Styles.Heading1StyleKey}"
           TargetType="{x:Type Paragraph}">
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="FontSize" Value="42" />
    </Style>

    <Style x:Key="{x:Static wpf:Styles.Heading2StyleKey}"
           TargetType="{x:Type Paragraph}">
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="FontSize" Value="36" />
    </Style>

    <Style x:Key="{x:Static wpf:Styles.Heading3StyleKey}"
           TargetType="{x:Type Paragraph}">
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="FontSize" Value="30" />
    </Style>

    <Style x:Key="{x:Static wpf:Styles.Heading4StyleKey}"
           TargetType="{x:Type Paragraph}">
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="FontSize" Value="24" />
    </Style>

    <Style x:Key="{x:Static wpf:Styles.Heading5StyleKey}"
           TargetType="{x:Type Paragraph}">
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style x:Key="{x:Static wpf:Styles.Heading6StyleKey}"
           TargetType="{x:Type Paragraph}">
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style x:Key="{x:Static wpf:Styles.QuoteBlockStyleKey}"
           TargetType="{x:Type Section}">
        <Setter Property="BorderBrush" Value="{DynamicResource TextBoxBorderBrush}" />
        <Setter Property="BorderThickness" Value="4,0,0,0" />
        <Setter Property="Padding" Value="16,0,0,0" />
    </Style>

    <Style x:Key="{x:Static wpf:Styles.TableStyleKey}"
           TargetType="{x:Type Table}">
        <Setter Property="BorderBrush" Value="{DynamicResource TextBoxBorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,1,1" />
        <Setter Property="CellSpacing" Value="0" />
    </Style>

    <Style x:Key="{x:Static wpf:Styles.TableCellStyleKey}"
           TargetType="{x:Type TableCell}">
        <Setter Property="BorderBrush" Value="{DynamicResource TextBoxBorderBrush}" />
        <Setter Property="BorderThickness" Value="1,1,0,0" />
    </Style>

    <Style x:Key="{x:Static wpf:Styles.TaskListStyleKey}"
           BasedOn="{StaticResource CustomCheckBox}"
           TargetType="{x:Type CheckBox}" />

    <Style x:Key="{x:Static wpf:Styles.ThematicBreakStyleKey}"
           TargetType="{x:Type Line}">
        <Setter Property="Stretch" Value="Fill" />
        <Setter Property="Stroke" Value="{DynamicResource TextBoxBorderBrush}" />
    </Style>

</ResourceDictionary>